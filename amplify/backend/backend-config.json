{
  "function": {
    "scraper": {
      "build": true,
      "providerPlugin": "awscloudformation",
      "service": "Lambda"
    }
  },
  "api": {
    "restapi": {
      "service": "API Gateway",
      "providerPlugin": "awscloudformation",
      "dependsOn": [
        {
          "category": "function",
          "resourceName": "scraper",
          "attributes": [
            "Name",
            "Arn"
          ]
        }
      ]
    },
    "graphqlapi": {
      "service": "AppSync",
      "providerPlugin": "awscloudformation",
      "output": {
        "authConfig": {
          "defaultAuthentication": {
            "authenticationType": "API_KEY",
            "apiKeyConfig": {
              "apiKeyExpirationDays": 365,
              "description": "public"
            }
          },
          "additionalAuthenticationProviders": []
        }
      }
    }
  }
}